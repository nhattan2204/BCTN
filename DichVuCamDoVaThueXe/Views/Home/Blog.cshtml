@using Data.Entity;
@{
	ViewBag.Title = "Blog";
	Layout = "~/Views/Shared/_Layout.cshtml";
	List<TinTuc> listTT = ViewBag.listTT as List<TinTuc>;
}

<div id="contents">
	<div>
		<div class="body" id="blog">
			<div id="sidebar">
				<div>
					<h5>Featured Blogs</h5>
					<ul class="posts">
						<li>
							<span class="time">Apr 16</span>
							<p>
								<a>Sedan 4 seats</a> The design of the rear ceiling and luggage compartment is broken, separating the 3 engine compartments, cabin compartment and luggage compartment.
							</p>
						</li>
						<li>
							<span class="time">Apr 15</span>
							<p>
								<a>Hatchback 2-4-5 seats</a> Hatchback is one of the most popular cars and has almost the cheapest price.
							</p>
						</li>
						<li>
							<span class="time">Apr 16</span>
							<p>
								<a>MPV - Multi-purpose Vehicle</a> Khác với các dòng xe ô tô trên, các ghế có thể sắp xếp để phục vụ nhu cầu chở khách hoặc hành lý, gầm xe thấp hơn so với SUV.
							</p>
						</li>
					</ul>
				</div>
				<div>
					<h5>Blog Categories</h5>
					<ul>
						<li>
							<a >Ford Ranger</a>
						</li>
						<li>
							<a >Honda City</a>
						</li>
						<li>
							<a >Chevrolet Camaro</a>
						</li>
						<li>
							<a >Toyota Innova</a>
						</li>
						<li>
							<a >Mazda6</a>
						</li>
						<li>
							<a >Hyundai Sonata</a>
						</li>
					</ul>
				</div>
				<div>
					<h5>Archives</h5>
					<ul>
						<li>
							<a >March 2019</a>
						</li>
						<li>
							<a >February 2019</a>
						</li>
						<li>
							<a >January 2019</a>
						</li>
						<li>
							<a >December 2018</a>
						</li>
						<li>
							<a >November 2018</a>
						</li>
						<li>
							<a >October 2018</a>
						</li>
					</ul>
				</div>
			</div>
			<div id="main">
				<div class="viewer">
					@if (listTT != null)
					{
						foreach (var item in listTT)
						{
							<span class="time">Apr 16</span>
							<h3><a>@item.Title</a></h3>
							<p class="info">
								Date Posted: @item.Date
							</p>
							<div class="frame">
								<img src="@Url.Content("~/images/"+item.Hinh)" width="100%" height="100%" alt="Img">
							</div>
							<p>
								@Html.Raw(item.MoTa)
							</p>
							
						}
					}
				</div>
			</div>
		</div>
	</div>
</div>
<script src="~/Content/css/jquery.min.js"></script>
<script>
	$("#blognav").attr("class", "selected");
</script>

